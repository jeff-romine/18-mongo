{{#if articles}}
  <div class="container-fluid">
    <div class="row">
      <table class="table-striped col-lg-12">
        <tbody id="articles">
        {{#each articles}}
          {{#unless saved}}
            <tr>
              <td class="headline text-center">
                <div class="headline"><a href="{{url}}"><h2>{{headline}}</h2></a>
                  <form method="POST" action="/save/{{id}}?_method=PUT">
                    <button type="submit" class="btn btn-primary save-button">Save Article</button>
                  </form>
                </div>
                {{#if summary}}
                  <p class="summary">{{summary}}</p>
                {{/if}}
              </td>
            </tr>
          {{/unless}}
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>
{{/if}}
